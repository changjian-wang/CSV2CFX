<ui:FluentWindow x:Class="Flex.Csv2Cfx.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:models="clr-namespace:Flex.Csv2Cfx.Models"
        Title="CFX 消息服务系统" 
        Height="750" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" 
                Background="{DynamicResource ApplicationBackgroundBrush}"
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}">
            <StackPanel Margin="15">
                <!-- 用户信息卡片 -->
                <ui:Card Margin="0,0,0,15" Padding="20">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="60" Height="60" 
                                Background="{DynamicResource AccentFillColorDefaultBrush}"
                                CornerRadius="30"
                                Margin="0,0,0,12">
                            <ui:SymbolIcon Symbol="Person24" 
                                          FontSize="32"
                                          Foreground="White"/>
                        </Border>
                        <TextBlock Text="{Binding CurrentUser.Data.UserName}" 
                                  FontWeight="SemiBold" 
                                  FontSize="16"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding CurrentUser.Data.Role}" 
                                  FontSize="12" 
                                  HorizontalAlignment="Center"
                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:Card>

                <!-- 连接状态卡片 -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="连接状态" 
                                  FontSize="13" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ConnectionStatus}" Value="已连接">
                                                <Setter Property="Fill" Value="#4CAF50"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ConnectionStatus}" Value="连接中">
                                                <Setter Property="Fill" Value="#FF9800"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ConnectionStatus}" Value="连接失败">
                                                <Setter Property="Fill" Value="#F44336"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding ConnectionStatus}" FontWeight="Medium"/>
                        </StackPanel>

                        <Separator Margin="0,8,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsServiceRunning}" Value="True">
                                                <Setter Property="Fill" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding ServiceStatusText}" FontWeight="Medium"/>
                        </StackPanel>

                        <Separator Margin="0,8,0,8"/>

                        <TextBlock Text="{Binding StatsText}" 
                                  FontSize="12" 
                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </ui:Card>

                <!-- 协议选择 -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="消息协议" 
                                  FontSize="13" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>
                        <ComboBox x:Name="ProtocolComboBox"
                                  ItemsSource="{Binding AvailableProtocols}"
                                  SelectedItem="{Binding SelectedProtocol, Mode=OneWay}"
                                  SelectionChanged="ProtocolComboBox_SelectionChanged"
                                  HorizontalAlignment="Stretch"/>
                        <TextBlock Text="{Binding ProtocolDisplayText}" 
                                  FontSize="11"
                                  Margin="0,8,0,0"
                                  Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="提示：切换协议前请先停止服务" 
                                  FontSize="10"
                                  Margin="0,4,0,0"
                                  TextWrapping="Wrap"
                                  Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                    </StackPanel>
                </ui:Card>

                <!-- 操作按钮 -->
                <StackPanel>
                    <ui:Button Content="{Binding StartButtonText}" 
                              Icon="{ui:SymbolIcon Play24}"
                              Command="{Binding ToggleServiceCommand}"
                              HorizontalAlignment="Stretch"
                              Margin="0,0,0,10">
                        <ui:Button.Style>
                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                <Setter Property="Appearance" Value="Success"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsServiceRunning}" Value="True">
                                        <Setter Property="Appearance" Value="Danger"/>
                                        <Setter Property="Icon" Value="{ui:SymbolIcon Stop24}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:Button.Style>
                    </ui:Button>

                    <ui:Button Content="重新连接" 
                              Icon="{ui:SymbolIcon ArrowSync24}"
                              Command="{Binding ReconnectCommand}"
                              Appearance="Secondary"
                              HorizontalAlignment="Stretch"
                              Margin="0,0,0,10"/>

                    <ui:Button Content="清空消息" 
                              Icon="{ui:SymbolIcon Delete24}"
                              Command="{Binding ClearMessagesCommand}"
                              Appearance="Danger"
                              HorizontalAlignment="Stretch"
                              Margin="0,0,0,10"/>

                    <ui:Button Content="系统配置" 
                              Icon="{ui:SymbolIcon Settings24}"
                              Command="{Binding OpenSettingsCommand}"
                              Appearance="Secondary"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 中间服务状态区域 -->
        <Grid Grid.Column="1" Margin="20">
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}">
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <Border Width="100" Height="100"
                            CornerRadius="50"
                            Margin="0,0,0,25">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#9E9E9E"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsServiceRunning}" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <ui:SymbolIcon FontSize="50" Foreground="White">
                            <ui:SymbolIcon.Style>
                                <Style TargetType="ui:SymbolIcon">
                                    <Setter Property="Symbol" Value="Stop24"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsServiceRunning}" Value="True">
                                            <Setter Property="Symbol" Value="Play24"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:SymbolIcon.Style>
                        </ui:SymbolIcon>
                    </Border>

                    <TextBlock FontSize="28" 
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="服务已停止"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsServiceRunning}" Value="True">
                                        <Setter Property="Text" Value="服务运行中"/>
                                        <Setter Property="Foreground" Value="{DynamicResource AccentTextFillColorPrimaryBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="CFX 消息自动发布服务"
                              FontSize="16"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,8"
                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                    <TextBlock FontSize="13"
                              HorizontalAlignment="Center"
                              Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="点击启动服务开始自动发布消息"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsServiceRunning}" Value="True">
                                        <Setter Property="Text" Value="正在监控文件变化并自动发布消息"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 右侧消息历史 -->
        <Border Grid.Column="2" 
                Background="{DynamicResource ApplicationBackgroundBrush}"
                BorderThickness="1,0,0,0" 
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 标题 -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="消息历史" 
                              FontWeight="SemiBold" 
                              FontSize="18"/>
                    <TextBlock Text="{Binding SentMessages.Count, StringFormat='共 {0} 条消息'}" 
                              FontSize="12"
                              Margin="0,4,0,0"
                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <!-- 消息列表 -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding SentMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:Message}">
                                <ui:Card Margin="0,0,0,10" Padding="12">
                                    <StackPanel>
                                        <!-- 消息头部 -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0"
                                                   CornerRadius="3"
                                                   Padding="6,2"
                                                   Margin="0,0,8,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Gray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Protocol}" Value="AMQP">
                                                                <Setter Property="Background" Value="#2196F3"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Protocol}" Value="MQTT">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Protocol}" Value="SYSTEM">
                                                                <Setter Property="Background" Value="#9E9E9E"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Protocol}" 
                                                          FontSize="11"
                                                          FontWeight="SemiBold"
                                                          Foreground="White"/>
                                            </Border>

                                            <TextBlock Grid.Column="1"
                                                      Text="{Binding Topic}" 
                                                      FontSize="11"
                                                      FontWeight="Medium"
                                                      VerticalAlignment="Center"
                                                      TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Grid.Column="2"
                                                      Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" 
                                                      FontSize="10"
                                                      Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                      VerticalAlignment="Center"/>
                                        </Grid>

                                        <!-- 消息内容 -->
                                        <TextBlock Text="{Binding Content}" 
                                                  FontSize="12"
                                                  TextWrapping="Wrap"
                                                  Margin="0,0,0,8"
                                                  MaxHeight="60"
                                                  TextTrimming="CharacterEllipsis"/>

                                        <!-- 状态 -->
                                        <TextBlock FontSize="11">
                                            <TextBlock.Text>
                                                <Binding Path="Status"/>
                                            </TextBlock.Text>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="成功">
                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                            <Setter Property="Text" Value="✓ 发送成功"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="失败">
                                                            <Setter Property="Foreground" Value="#F44336"/>
                                                            <Setter Property="Text" Value="✗ 发送失败"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </ui:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>